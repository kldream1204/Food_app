            form(action=routes.login, method="post")
                .form-content
                    i.far.fa-id-badge
                    input(type="text", name="ID", placeholder="ID", required=true)
                .form-content                    
                    i.fas.fa-unlock-alt
                    input(type="password", name="password", placeholder="Password", required=true)
                input.submit-button(type="submit", value="LOGIN")