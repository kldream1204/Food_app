extends ./layouts/main
include ./mixins/resBlock

block content
    .home
        .home__slide-show 

        .top-restaurant
            .top-restaurant__title 
                h3.title-first 덮
                h3.title-last 밥
                i.fas.fa-utensils
                span.title-content 맛집
                span.title-description 가장 인기있는 맛집만을 선별했습니다.
            .top-restaurant__content
                each restaurant in restaurants
                    +resBlock({
                        title: restaurant.title,
                        photo: restaurant.photo,
                        description: restaurant.description,
                        location: restaurant.location,
                        detailLocation: restaurant.detailLocation,
                        point: restaurant.point,
                        id: restaurant.id
                })
        .location-restaurant
            .location-restaurant__title 
                h3.title-first 지
                h3.title-last 역
                i.fas.fa-utensils
                span.title-content 맛집
                span.title-description 우리 지역의 맛집은 어디있을까?
            ul
                li.location-button-show
                    span 펼치기
                    i.fas.fa-caret-right
                li.location-button-hidden.button-display
                    span 접기
                    i.fas.fa-caret-right    
                li.location-list
                    .location-list__container
                        ul.location-list__container-list                    
                            li.location-seoul 서울
                            li 인천 
                            li 부산 
                            li 대구 
                            li 대전 
                            li 광주 
                            li 울산 
                            li 경기 
                            li 충남 
                            li 충북 
                            li 전북 
                            li 전남 
                            li 경북 
                            li 경남 
                            li 제주 
        .menu-restaurant 
            h3 Menu TOP
            ul
                li KOREA

                li JAPAN